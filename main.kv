<MainScreen>

    name: 'main'
    on_enter:root.start_joy_thread()

    onOffBtn: onOffBtn
    ctrBtn: ctrBtn
    mtrBtn: mtrBtn
    motorLabel: motorLabel
    slider: slider
    imageBtn: imageBtn


    FloatLayout:
        size_hint: None, None


    #DPEAButton:
        id: test_button
        text: 'test'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        #on_press: root.pressed()

    #DPEAButton:
        text: "test2"
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1
        #on_press: root.pressed()

    #ImageButton:
        id: logo_image_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        #on_press: root.pressed()

    DPEAButton:
        id: onOffBtn
        text: "Toggle"
        size: 100, 100
        x: root.width * 0.08
        y:root.height * 0.7
        color: 1, 0, 0, 1
       # on_press: root.button_state(OnOffBtn.text)
        on_press: root.toggle()

    DPEAButton:
        id: ctrBtn
        text: "Counter"
        size: 100, 100
        x: root.width * 0.08
        y:root.height * 0.1
        color: 1, 0, 0, 1
        on_press: root.counter()

    DPEAButton:
        id: mtrBtn
        text: "motor"
        size: 100, 100
        x: root.width * 0.08
        y:root.height * 0.35
        color: 0, 1, 1, 1
        on_press: root.flip = not root.flip

    Label:
        id: motorLabel
        text: "motor on" if root.flip else "motor off"
        size: 1000, 1000
        x: root.width * -0.36
        y:root.height * -0.2
        color: 0, 0, 0, 1

    Slider:
        id: slider
        min: 0
        max: 100
        y:root.height * .5
        size_hint: 0.2, 0.2
        step: 1

    Label:
        text: str(slider.value)
        size: 1000, 1000
        x: root.width * 0
        y:root.height * 0.4
        color: 0, 0, 0, 1

    ImageButton:
        id: imageBtn
        source: "juliam.jpg"
        size: 100, 100
        x: root.width * 0.45
        y: root.height * 0.05
        on_press: root.transitionto()

    ImageButton:
        id: animate_pratik
        source: "tiny_pratik2.jpg"
        size: 100, 100
        x: root.width * 0.7
        y: root.height * 0.7
        on_press: root.animate()

    Label:
        id: joy_label_x
        text: "x:" + str(root.joy_x_val)
        size: 1000, 1000
        x: root.width * 0
        y:root.height * 0.1
        color: 0, 0, 0, 1

    Label:
        id: joy_label_y
        text: "y:" + str(root.joy_y_val)
        size: 1000, 1000
        x: root.width * 0
        y:root.height * 0.2
        color: 0, 0, 0, 1

    Label
        id: jButton
        size: 100, 100
        x: root.width * 0.0001
        y:root.height * 0.45
        color: 0, 0, 0, 1


    DPEAButton:
        id: "mtrOnOff"
        text: 'motor on/off'
        size: 100, 100
        x: root.width * 0.7
        y: root.height * 0.35
        color: 0, 1, 0, 1
        on_press: root.toggle2()


